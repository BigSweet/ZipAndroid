<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZipShapeLinearLayout">
        <attr name="sv_orientation">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="sv_background" format="color|reference" />
        <attr name="sv_radius" format="dimension" />
        <attr name="sv_radius_top_left" format="dimension" />
        <attr name="sv_radius_bottom_right" format="dimension" />
        <attr name="sv_radius_bottom_left" format="dimension" />
        <attr name="sv_radius_top_right" format="dimension" />
        <attr name="sv_background_start" format="color|reference" />
        <attr name="sv_background_end" format="color|reference" />

    </declare-styleable>

    <declare-styleable name="SlideBar">
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="slideBar_chooseTextColor" format="color"/>
        <attr name="slideBar_backgroundColor" format="color"/>
        <attr name="slideBar_chooseBackgroundColor" format="color"/>
        <attr name="slideBar_style">
            <enum name="default_" value="0"/>
            <enum name="none" value="1"/>
            <enum name="circle" value="2"/>
            <enum name="stretch" value="3"/>
        </attr>
    </declare-styleable>
</resources>