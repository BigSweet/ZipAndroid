<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/private_include_title"
            layout="@layout/include_title_bar" />


        <LinearLayout
            android:id="@+id/set_info_top_progress_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/private_include_title">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_info_top_progress_ll">


            <com.zip.zipandroid.shape.ZipShapeConstraintLayout
                android:id="@+id/band_card_top_hint"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toTopOf="parent"
                app:sv_scl_background="#2423C948"
                app:sv_scl_radius="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/bank_top_hint_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="      Your account information will be protected with encryption level security, so please feel at ease when providing the relevant details."
                    android:textColor="#ff23c948"

                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.zip.zipandroid.shape.ZipShapeConstraintLayout>


            <com.zip.zipandroid.view.SetInfoEditView
                android:id="@+id/zip_bank_name"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="15dp"
                app:infoHintName="Please choose"
                app:infoTopName="Bank Name"
                app:layout_constraintTop_toBottomOf="@+id/band_card_top_hint"
                app:showBottomNumber="false"
                app:showInfoArrow="true"
                app:showX="true">

            </com.zip.zipandroid.view.SetInfoEditView>


            <com.zip.zipandroid.view.SetInfoEditView
                android:id="@+id/zip_bank_account"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="15dp"
                app:infoHintName="000 000 0000"
                app:infoTopName="Bank Account"
                app:inputInfoType="9"
                app:maxNumberValue="10"
                app:layout_constraintTop_toBottomOf="@+id/zip_bank_name"
                app:showBottomNumber="true"
                app:showInfoArrow="false"
                app:showX="true">

            </com.zip.zipandroid.view.SetInfoEditView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="23dp"
                android:text="• Please add your bank account to receive the loan funds.\n• Please be sure to use your own real-name registered
bank account."
                android:textColor="#ffa5b0ce"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/zip_bank_account" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.zip.zipandroid.shape.ZipShapeTextView
            android:id="@+id/info_next_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="33dp"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:sv_tx_background="#FF3667F0"
            app:sv_tx_disable_background="#FFAAC0FB"
            app:sv_tx_disable_color="@color/white"
            app:sv_tx_enable="false"
            app:sv_tx_radius="8dp">

        </com.zip.zipandroid.shape.ZipShapeTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>