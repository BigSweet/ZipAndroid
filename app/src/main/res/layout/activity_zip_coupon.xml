<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/private_include_title"
            layout="@layout/include_title_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/zip_coupon_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/private_include_title">

        </androidx.recyclerview.widget.RecyclerView>


        <com.zip.zipandroid.shape.ShapeTextView
            android:id="@+id/coupon_sure_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="41dp"
            android:gravity="center"
            android:text="Confirm"
            android:layout_marginBottom="55dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:sv_tx_background="#FF205EDB"
            app:sv_tx_radius="8dp"></com.zip.zipandroid.shape.ShapeTextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>