<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_title_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/white">

        <RelativeLayout
            android:id="@+id/common_title_rl"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/common_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:src="@drawable/zip_back_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />


            <TextView
                android:id="@+id/title_bar_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FF061F3F"
                android:textSize="17dp"
                tools:text="" />

            <ImageView
                android:id="@+id/title_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/title_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="#ff3667f0"
                android:textSize="11sp"
                tools:text="Expired Coupons" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>