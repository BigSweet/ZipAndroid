<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="23dp">

    <TextView
        android:id="@+id/item_contract_main_title_xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="*"
        android:textColor="#fff54b4b"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_contract_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family member"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_contract_main_title_xx"
        app:layout_constraintLeft_toRightOf="@+id/item_contract_main_title_xx"
        app:layout_constraintTop_toTopOf="@+id/item_contract_main_title_xx" />


    <com.zip.zipandroid.view.SetInfoEditView
        android:id="@+id/item_contract_relation_tv"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        app:infoHintName="Please choose"
        app:infoTopName="Relationship"
        app:inputInfoType="1"
        app:layout_constraintTop_toBottomOf="@+id/item_contract_main_title_tv"
        app:showBottomNumber="false"
        app:showInfoArrow="true"
        app:showX="false">

    </com.zip.zipandroid.view.SetInfoEditView>


    <com.zip.zipandroid.view.SetInfoEditView
        android:id="@+id/item_contract_name_tv"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        app:infoHintName="Please enter"
        app:infoTopName="Name"
        app:inputInfoType="1"
        app:layout_constraintTop_toBottomOf="@+id/item_contract_relation_tv"
        app:showBottomNumber="false"
        app:showInfoArrow="false"
        app:showX="false">

    </com.zip.zipandroid.view.SetInfoEditView>


    <com.zip.zipandroid.view.SetInfoEditView
        android:id="@+id/item_contract_number_tv"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        app:infoHintName="Please enter"
        app:infoTopName="Phone number"
        app:inputInfoType="8"
        app:layout_constraintTop_toBottomOf="@+id/item_contract_name_tv"
        app:showBottomNumber="false"
        app:showInfoArrow="false"
        app:showLeftNumber="true"
        app:showX="false">

    </com.zip.zipandroid.view.SetInfoEditView>


</androidx.constraintlayout.widget.ConstraintLayout>