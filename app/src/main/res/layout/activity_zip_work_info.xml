<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/private_include_title"
            layout="@layout/include_title_bar" />


        <LinearLayout
            android:id="@+id/set_info_top_progress_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/private_include_title">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_progress_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_default_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_default_icon" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/zip_setinfo_top_default_icon" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_info_top_progress_ll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.zip.zipandroid.view.SetInfoEditView
                    android:id="@+id/occ_info_info_view"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_marginTop="15dp"
                    app:infoHintName="Please choose"
                    app:infoTopName="Occupation"
                    app:inputInfoType="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:showBottomNumber="false"
                    app:showInfoArrow="true"
                    app:showX="true">

                </com.zip.zipandroid.view.SetInfoEditView>

                <com.zip.zipandroid.view.SetInfoEditView
                    android:id="@+id/emp_status_info_view"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_marginTop="15dp"
                    app:infoHintName="Please choose"
                    app:infoTopName="Employment Status"
                    app:inputInfoType="1"
                    app:layout_constraintTop_toBottomOf="@+id/occ_info_info_view"
                    app:showBottomNumber="false"
                    app:showInfoArrow="true"
                    app:showX="true">

                </com.zip.zipandroid.view.SetInfoEditView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/student_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/emp_status_info_view">

                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/school_name_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please enter"
                        app:infoTopName="School Name"
                        app:inputInfoType="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/school_address_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please choose"
                        app:infoTopName="School Address"
                        app:inputInfoType="4"
                        app:layout_constraintTop_toBottomOf="@+id/school_name_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="true"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/school_detail_name_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please enter"
                        app:infoTopName="Detail School Address"
                        app:inputInfoType="1"
                        app:layout_constraintTop_toBottomOf="@+id/school_address_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/school_income_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="e.g. 10000"
                        app:infoTopName="Monthly Income"
                        app:layout_constraintTop_toBottomOf="@+id/school_detail_name_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:inputInfoType="6"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/school_time_work_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please choose"
                        app:infoTopName="Enrollment Date"
                        app:layout_constraintTop_toBottomOf="@+id/school_income_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="true"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ume_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/emp_status_info_view"
                    tools:visibility="gone">


                    <TextView
                        android:id="@+id/add_place_xx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="*"
                        android:textColor="#fff54b4b"
                        android:textSize="13sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you have any additional income:"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/add_place_xx"
                        app:layout_constraintLeft_toRightOf="@+id/add_place_xx"
                        app:layout_constraintTop_toTopOf="@+id/add_place_xx" />


                    <LinearLayout
                        android:id="@+id/add_icome_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/add_place_xx">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/ume_rv"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/length_of_um_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="In months, e.g. 10"
                        app:infoTopName="Length of unemployment"
                        app:layout_constraintTop_toBottomOf="@+id/add_icome_ll"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:inputInfoType="7"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/ume_income_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="e.g. 10000"
                        app:infoTopName="Monthly Income"
                        app:layout_constraintTop_toBottomOf="@+id/length_of_um_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:inputInfoType="6"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/company_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/emp_status_info_view"
                    tools:visibility="gone">


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/company_name_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please enter"
                        app:infoTopName="Company Name"
                        app:inputInfoType="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/company_address_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please choose"
                        app:infoTopName="Work Address"
                        app:layout_constraintTop_toBottomOf="@+id/company_name_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="true"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/detail_work_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please enter"
                        app:infoTopName="Detail Work Address"
                        app:inputInfoType="4"
                        app:layout_constraintTop_toBottomOf="@+id/company_address_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/pay_day_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="1-31"
                        app:infoTopName="Payday"
                        app:inputInfoType="5"
                        app:layout_constraintTop_toBottomOf="@+id/detail_work_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/income_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="e.g. 10000"
                        app:infoTopName="Monthly Income"
                        app:inputInfoType="6"
                        app:layout_constraintTop_toBottomOf="@+id/pay_day_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="false"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>


                    <com.zip.zipandroid.view.SetInfoEditView
                        android:id="@+id/time_work_info_view"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="15dp"
                        app:infoHintName="Please choose"
                        app:infoTopName="The time work begins"
                        app:layout_constraintTop_toBottomOf="@+id/income_info_view"
                        app:showBottomNumber="false"
                        app:showInfoArrow="true"
                        app:showX="true">

                    </com.zip.zipandroid.view.SetInfoEditView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <com.zip.zipandroid.shape.ZipShapeTextView
            android:id="@+id/info_next_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="33dp"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:sv_tx_background="#FF3667F0"
            app:sv_tx_disable_background="#FFAAC0FB"
            app:sv_tx_disable_color="@color/white"
            app:sv_tx_enable="false"
            app:sv_tx_radius="8dp">

        </com.zip.zipandroid.shape.ZipShapeTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>