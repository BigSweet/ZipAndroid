<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:layout_marginHorizontal="31dp"
            android:layout_marginTop="95dp"
            android:background="@drawable/zip_rate_bg_icon"
            app:layout_constraintTop_toTopOf="@+id/zip_rate_top_iv">

            <TextView
                android:id="@+id/rate_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:text="Your Opinion Matters!"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/zip_rate_des_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="38dp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:text="Howâ€™s your experience with our app? Your feedback is greatly appreciated."
                android:textColor="#ff000000"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/rate_title_tv" />


            <com.zip.zipandroid.view.ZipScoreView
                android:id="@+id/zip_rate_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                app:itemScoreWidth="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/zip_rate_des_tv"
                tools:layout_height="32dp">

            </com.zip.zipandroid.view.ZipScoreView>

            <TextView
                android:id="@+id/zip_cancel_tv"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_logout_cancel"
                android:gravity="center"
                android:text="Rate Later"
                android:textColor="#FF3667F0"
                android:textSize="14dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/zip_go_rate_tv"
                app:layout_constraintTop_toBottomOf="@+id/zip_rate_score" />

            <com.zip.zipandroid.shape.ShapeTextView
                android:id="@+id/zip_go_rate_tv"
                android:layout_width="123dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Leave a Review"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@+id/zip_cancel_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/zip_cancel_tv"
                app:sv_tx_background="#FF3667F0"
                app:sv_tx_radius="8dp">

            </com.zip.zipandroid.shape.ShapeTextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/zip_rate_top_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zip_rate_top_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>