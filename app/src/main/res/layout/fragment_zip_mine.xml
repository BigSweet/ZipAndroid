<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <com.zip.zipandroid.shape.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:sv_scl_background="#FF3667F0">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="74dp"
                android:src="@drawable/zip_mine_top_bg"
                app:layout_constraintTop_toBottomOf="@+id/zip_home_custom_iv"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/zip_mine_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="94dp"
                android:textColor="#ffffffff"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hi, Nira Bleck" />

        </com.zip.zipandroid.shape.ShapeConstraintLayout>

        <com.zip.zipandroid.shape.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="187dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sv_scl_background="#FFF0F2F5"

            app:sv_scl_radius_top_left="25dp"
            app:sv_scl_radius_top_right="25dp">


            <com.zip.zipandroid.shape.ShapeConstraintLayout
                android:id="@+id/mine_order_cl"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="33dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/mine_cop_cl"
                app:layout_constraintTop_toTopOf="parent"
                app:sv_scl_background="@color/white"
                app:sv_scl_radius="12dp">

                <ImageView
                    android:id="@+id/zip_mine_order_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/zip_mine_order_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="Order History"
                    android:textColor="#ff000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/zip_mine_order_iv"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.zip.zipandroid.shape.ShapeConstraintLayout>

            <com.zip.zipandroid.shape.ShapeConstraintLayout
                android:id="@+id/mine_cop_cl"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="15dp"
                app:layout_constraintLeft_toRightOf="@+id/mine_order_cl"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sv_scl_background="@color/white"
                app:sv_scl_radius="12dp">

                <ImageView
                    android:id="@+id/zip_mine_cop_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/zip_mine_cop_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="Coupon"
                    android:textColor="#ff000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/zip_mine_cop_iv"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.zip.zipandroid.shape.ShapeConstraintLayout>


            <com.zip.zipandroid.shape.ShapeConstraintLayout
                android:id="@+id/zip_mine_center_sl"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/mine_cop_cl"
                app:sv_scl_background="@color/white"
                app:sv_scl_radius="12dp">

                <com.zip.zipandroid.shape.ShapeConstraintLayout
                    android:id="@+id/zip_mine_bank_sl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/zip_mine_bank_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/zip_mine_bank_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="Bank Account Information"
                        android:textColor="#ff000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/zip_mine_bank_iv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/zip_mine_arrow_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </com.zip.zipandroid.shape.ShapeConstraintLayout>

                <View
                    android:id="@+id/zip_mine_center_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#FFF3F4F6"
                    app:layout_constraintTop_toBottomOf="@+id/zip_mine_bank_sl">

                </View>

                <com.zip.zipandroid.shape.ShapeConstraintLayout
                    android:id="@+id/zip_mine_about_sl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/zip_mine_center_line">

                    <ImageView
                        android:id="@+id/zip_mine_about_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/zip_mine_about_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="About Us"
                        android:textColor="#ff000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/zip_mine_about_iv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/zip_mine_arrow_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </com.zip.zipandroid.shape.ShapeConstraintLayout>


            </com.zip.zipandroid.shape.ShapeConstraintLayout>


            <com.zip.zipandroid.shape.ShapeConstraintLayout
                android:id="@+id/zip_mine_logout_sl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/zip_mine_center_sl"
                app:sv_scl_background="@color/white"
                app:sv_scl_radius="12dp">

                <ImageView
                    android:id="@+id/zip_mine_logout_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/zip_mine_logout_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="Log Out"
                    android:textColor="#FFFF4343"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/zip_mine_logout_iv"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.zip.zipandroid.shape.ShapeConstraintLayout>
        </com.zip.zipandroid.shape.ShapeConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>