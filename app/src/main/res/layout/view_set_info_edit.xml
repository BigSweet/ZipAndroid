<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="69dp">

    <com.zip.zipandroid.shape.ShapeEditTextView
        android:id="@+id/set_info_edit"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginHorizontal="15dp"
        android:background="@null"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:gravity="bottom"
        android:hint="Please choose"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:textColorHint="#FFD4D4D4"
        app:layout_constraintTop_toTopOf="parent"
        app:setv_background="#FFF7F7F7"
        app:setv_radius="13dp">

    </com.zip.zipandroid.shape.ShapeEditTextView>

    <TextView
        android:id="@+id/set_info_xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="*"
        android:textColor="#fff54b4b"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/set_info_edit"
        app:layout_constraintTop_toTopOf="@+id/set_info_edit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:id="@+id/set_info_arrow"
        android:layout_marginBottom="13dp"
        android:src="@drawable/zip_select_arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/set_info_edit"
        app:layout_constraintRight_toRightOf="@+id/set_info_edit">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marital Status"
        android:id="@+id/set_info_top_name"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/set_info_xx"
        app:layout_constraintLeft_toRightOf="@+id/set_info_xx"
        app:layout_constraintTop_toTopOf="@+id/set_info_xx" />

    <TextView
        android:id="@+id/set_info_max_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="11dp"
        android:text="0/11"
        android:textColor="#ffd4d4d4"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/set_info_edit"
        app:layout_constraintRight_toRightOf="@+id/set_info_edit" />



</androidx.constraintlayout.widget.ConstraintLayout>