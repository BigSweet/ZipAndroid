    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <ImageView
            android:id="@+id/login_top_bg"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_login_top"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/zip_login_place_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="33dp"
            android:text="Please enter your phone number"
            android:textColor="#ff000000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_top_bg" />

        <com.zip.zipandroid.shape.ZipShapeConstraintLayout
            android:id="@+id/login_edit_number_sl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="33dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/zip_login_place_number_tv"
            app:sv_scl_background="#FFF1F5FF"
            app:sv_scl_radius="13dp">


            <com.zip.zipandroid.view.NoSpaceLengthLimitedEditText
                android:id="@+id/zip_login_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Phone Number"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="59dp"
                android:textColor="@color/black"
                android:textColorHint="#FFAFB8D0"
                android:textSize="14dp">

            </com.zip.zipandroid.view.NoSpaceLengthLimitedEditText>


            <TextView
                android:id="@+id/zip_234_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="+234"
                android:textColor="#ffafb8d0"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.zip.zipandroid.shape.ZipShapeConstraintLayout>


        <com.zip.zipandroid.shape.ZipShapeTextView
            android:id="@+id/zip_login_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="33dp"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="Sign up / Login"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_number_sl"
            app:sv_tx_background="#FF3667F0"
            app:sv_tx_disable_background="#FFAAC0FB"
            app:sv_tx_enable="false"
            app:sv_tx_radius="8dp">

        </com.zip.zipandroid.shape.ZipShapeTextView>

        <ImageView
            android:id="@+id/zip_login_select_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/zip_login_select_icon"
            app:layout_constraintLeft_toLeftOf="@+id/zip_login_btn"
            app:layout_constraintTop_toBottomOf="@+id/zip_login_btn" />

        <View
            android:id="@+id/private_click_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/zip_login_select_iv"
            app:layout_constraintLeft_toLeftOf="@+id/zip_login_select_iv"
            app:layout_constraintRight_toRightOf="@+id/zip_login_select_iv"
            app:layout_constraintTop_toTopOf="@+id/zip_login_select_iv" />

        <TextView
            android:id="@+id/zip_login_private_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="I agree to the Terms of Service and Privacy Policy."
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/zip_login_select_iv"
            app:layout_constraintLeft_toRightOf="@+id/zip_login_select_iv"
            app:layout_constraintTop_toTopOf="@+id/zip_login_select_iv" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="47dp"
            android:src="@drawable/bg_login_logo"
            app:layout_constraintBottom_toBottomOf="@+id/login_top_bg"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
