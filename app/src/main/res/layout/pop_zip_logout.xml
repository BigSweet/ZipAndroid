<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.zip.zipandroid.shape.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginHorizontal="43dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sv_scl_background="@color/white"
            app:sv_scl_radius="22dp">

            <TextView
                android:id="@+id/logout_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="Confirm Logout"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/logout_des_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="Do you want to log out now?"
                android:textColor="#ff000000"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logout_title_tv" />

            <TextView
                android:id="@+id/logout_cancel_tv"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/bg_logout_cancel"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#FF3667F0"
                android:textSize="14dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/logout_sure_tv"
                app:layout_constraintTop_toBottomOf="@+id/logout_des_tv" />

            <com.zip.zipandroid.shape.ShapeTextView
                android:id="@+id/logout_sure_tv"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Log Out"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintLeft_toRightOf="@+id/logout_cancel_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/logout_cancel_tv"
                app:sv_tx_background="#FF3667F0"
                app:sv_tx_radius="8dp">

            </com.zip.zipandroid.shape.ShapeTextView>

        </com.zip.zipandroid.shape.ShapeConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>